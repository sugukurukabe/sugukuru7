{
    "displayName": "SUGUKURU API Error Rate Alert",
    "combiner": "OR",
    "conditions": [
        {
            "displayName": "API 5xx Error Rate",
            "conditionThreshold": {
                "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"sugukuru-api\" AND metric.type=\"run.googleapis.com/request_count\" AND metric.labels.response_code_class=\"5xx\"",
                "comparison": "COMPARISON_GT",
                "thresholdValue": 5,
                "duration": "300s",
                "aggregations": [
                    {
                        "alignmentPeriod": "60s",
                        "perSeriesAligner": "ALIGN_RATE"
                    }
                ]
            }
        }
    ],
    "notificationChannels": [
        "projects/sugukuru7/notificationChannels/8540317787210228267"
    ],
    "alertStrategy": {
        "autoClose": "604800s"
    },
    "documentation": {
        "content": "SUGUKURU API で5xxエラーが発生しています。Cloud Run ログを確認してください。",
        "mimeType": "text/markdown"
    }
}